<div class="answers">
  <ul>
    <% if @answers.length != 0 %>
      <% @answers.each do |answer| %>
        <li><%= answer.responder.username %><br><br><%= answer.body%>
        <ul>
        <% answer.comments.each do |comment| %>
          <li><%= comment.body %></li>
          <% end %>
        </ul></li><br><br>
        <% if logged_in? %>
        <div>
          <form action="/questions/<%= @question.id %>/answers/<%= answer.id %>/comments" method="post">
            <label for="comment">Comment:</label>
            <input type="textfield" name="comment"><br>
            <button>Comment</button>
          </form>
        </div>
        <% end %>
         <br><br>
        <br>
      <% end %>
    <% else %>
      <i>No answers yet. Why don't you help them out?</i>
    <% end %>
  </ul>
</div>


